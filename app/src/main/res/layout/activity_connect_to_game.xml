<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ConnectToGameActivity">
    <LinearLayout
            android:id="@+id/mainLinearLayoutConnectToGame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button
                android:id="@+id/buttonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад"    />
        <TextView
                android:id="@+id/textViewConnectToGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_enter_id_game"
                android:textSize="14pt"/>
        <EditText
                android:id="@+id/editTextEnterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:ignore="MissingConstraints"/>
        <Button
                android:id="@+id/buttonConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Присоединиться"    />


    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:ignore="MissingConstraints">

        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>