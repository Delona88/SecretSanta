<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EnterEmailActivity">

    <LinearLayout
            android:id="@+id/mainLinearLayoutEnterId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button
                android:id="@+id/buttonGoBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Назад"/>
        <TextView
                android:id="@+id/textViewEnterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_enter_login"
                android:textSize="14pt"/>
        <EditText
                android:id="@+id/editTextEnterId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:ignore="MissingConstraints"/>
        <Button
                android:id="@+id/buttonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Войти"/>
        <Button
                android:id="@+id/buttonToRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Регистрация"/>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:ignore="MissingConstraints">

        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>