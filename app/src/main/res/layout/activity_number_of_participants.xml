<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quickplay.numbersofparicipantsMVP.NumberOfParticipants">
    <LinearLayout
            android:id="@+id/fillableLinearLayoutNamesOfParticipants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/textNumberOfParticipant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14pt"
                android:text="@string/title_number_of_participants"
                tools:ignore="MissingConstraints"/>
        <EditText
                android:id="@+id/inputNumberOfParticipant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:ignore="MissingConstraints"/>
        <Button
                android:id="@+id/buttonGoToNamesOfParticipants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Продолжить"
                tools:ignore="MissingConstraints"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>